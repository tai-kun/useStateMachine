{
  "extends": [
    "./node_modules/@tsconfig/node18/tsconfig.json",
    "./node_modules/@tsconfig/strictest/tsconfig.json"
  ],
  "include": [
    "@types/**/*",
    "scripts/**/*",
    "src/**/*",
    "test/**/*",
  ],
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsxdev",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true
  }
}
