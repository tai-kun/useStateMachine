{
  "name": "@tai-kun/use-state-machine",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Cassio Zen",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./external": {
      "types": "./dist/external.d.ts",
      "import": "./dist/external.mjs",
      "require": "./dist/external.cjs"
    }
  },
  "engines": {
    "node": "^18 || >=20"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "node scripts/build.mjs",
    "postbuild": "tsc -p tsconfig.build.json",
    "lint": "biome lint ./examples ./scripts ./src ./test",
    "size": "size-limit",
    "test": "dts test",
    "format": "biome format --write ./examples ./scripts ./src ./test",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@size-limit/preset-small-lib": "^11.0.2",
    "@testing-library/react": "^14.2.1",
    "@tsconfig/node18": "^18.2.2",
    "@tsconfig/strictest": "^2.0.3",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "dts-cli": "^2.0.4",
    "esbuild": "^0.20.1",
    "global-jsdom": "^24.0.0",
    "jsdom": "^24.0.0",
    "react": "^18.0.0",
    "size-limit": "^11.0.2",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "resetMocks": true
  },
  "size-limit": [
    {
      "path": "dist/index.min.mjs",
      "limit": "1 kB",
      "brotli": true
    }
  ],
  "volta": {
    "node": "18.19.1"
  }
}
