{
  "name": "@tai-kun/usestatemachine",
  "version": "1.0.1",
  "license": "MIT",
  "author": "Cassio Zen",
  "main": "dist/index.js",
  "module": "dist/usestatemachine.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": "^18 || >=20"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "biome lint ./examples ./src ./test",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test",
    "format": "biome format --write ./examples ./src ./test"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@size-limit/preset-small-lib": "^7.0.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@tsconfig/create-react-app": "^2.0.2",
    "@tsconfig/recommended": "^1.0.3",
    "@types/jest": "^29.5.12",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript/twoslash": "^2.1.0",
    "dts-cli": "^2.0.4",
    "husky": "^9.0.11",
    "react": ">=16.8.0",
    "size-limit": "^7.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "biome lint ./examples ./src ./test"
    }
  },
  "jest": {
    "resetMocks": true
  },
  "size-limit": [
    {
      "path": "dist/usestatemachine.cjs.production.min.js",
      "limit": "1 kB",
      "brotli": true
    }
  ],
  "volta": {
    "node": "18.19.1"
  }
}
